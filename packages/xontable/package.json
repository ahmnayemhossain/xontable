{
  "name": "xontable",
  "version": "0.2.4",
  "license": "MIT",
  "private": false,
  "keywords": [
    "react",
    "typescript",
    "datatable",
    "spreadsheet",
    "editable-table",
    "grid",
    "excel-like",
    "xontable",
    "table",
    "data-grid",
    "sheet",
    "google-sheets",
    "copy-paste",
    "filter",
    "column-group",
    "validation"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles": "./dist/styles/xontable.css"
  },
  "sideEffects": [
    "./dist/styles/xontable.css"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && node ./scripts/copy-styles.mjs",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
